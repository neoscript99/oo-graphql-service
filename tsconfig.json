{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*"
  ]
}
